{% set classes = [
  'uk-article',
  'uk-panel',
  'uk-panel-box',
  'uk-panel-box-secondary',
  'uk-margin-right'
] %}

{{ attach_library('classy/node') }}
<article{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  <h2{{ title_attributes.addClass('uk-panel-title') }}>
    {{ label }}
  </h2>
  {{ title_suffix }}
  <header class="uk-comment-header">
    {# Replace with read user image #}
    <img class="uk-comment-avatar" src="http://lorempixel.com/50/50/people/" alt=""/>
    <div class="uk-comment-meta">
      {% trans %}Submitted by {{ author_name }}{% endtrans %}<br />
      {% trans %}on {{ date }} in{% endtrans %}{{ content.field_discussion_category }} {{ content.field_drupal_version }}
    </div>
  </header>
  <div class="uk-comment-body">
    {{ content.body }}
    {{ content.links }}
  </div>
</article>
<div class="uk-panel uk-panel-header">
  <div class="uk-panel-body">
    {{ content.discussion_answers }}
  </div>
</div>