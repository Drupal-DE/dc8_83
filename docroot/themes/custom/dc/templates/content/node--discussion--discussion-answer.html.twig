{% embed "@dc/components/comment.html.twig" %}
  {% block comment_anchor %}
    <a name="{{- node.id -}}"></a>
  {% endblock %}

  {% block comment_header_meta %}
    <div class="uk-width-auto">
      <img class="uk-comment-avatar" src="http://lorempixel.com/55/55/people/" alt=""/>
    </div>
    <div class="uk-width-expand">
      <h4 class="uk-comment-title uk-margin-remove dc-heading">{{ label }}</h4>
      <p class="uk-comment-meta uk-margin-remove-top">{{ author_name }} | {{ date }}</p>
    </div>
  {% endblock %}
  {% block comment_body %}
    {{ content.body }}
  {% endblock %}
{% endembed %}