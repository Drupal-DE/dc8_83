{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
<div uk-form-custom>
  <button class="uk-button uk-button-small uk-button-default" type="button" tabindex="-1">{{ 'Select file'|trans }}</button>
  <input{{ attributes.addClass('') }} />{{ children }}
</div>