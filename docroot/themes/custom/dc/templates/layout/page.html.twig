<div id="header">
  <div class="header__full_width_dark">
    <div class="uk-container uk-container-center">
      <nav class="uk-navbar-container header__navbar_main_menu" uk-navbar>
        <div class="uk-navbar-left">
          <a class="uk-navbar-toggle uk-hidden@s" uk-navbar-toggle-icon href="#"></a>
          {{ page.mainmenu }}
          <ul class="uk-navbar-nav">
            <li><a href="#">Home</a></li>
            <li><a href="#">Handbuch</a></li>
            <li><a href="/discussions">Forum</a></li>
            <li><a href="#">Showroom</a></li>
          </ul>
        </div>
        <div class="uk-navbar-right">
          <div>
            <a class="uk-navbar-toggle" uk-search-icon="ratio: 1.5" href="#"></a>
            <div uk-drop="mode: click; pos: left-center; offset: 0">
              <form class="uk-search uk-search-navbar uk-width-1-1">
                <input class="uk-search-input" type="search" placeholder="Search..." autofocus>
              </form>
            </div>
          </div>
          {% if logged_in %}
            {# @toDo get image of logged in user #}
            <img class="uk-border-circle" src="http://lorempixel.com/40/40/people/" alt=""/>
          {% else %}
            {# Show dummy icon for non logged in users#}
            <a href="/user/login" class="uk-icon-button dc-icon-user-login" uk-icon="icon: users; ratio: 1.3"></a>
          {% endif %}
          <div uk-dropdown="pos: bottom-right">
            {{ page.header_user_menu }}
          </div>
        </div>
      </nav>
    </div>
  </div>

  <div class="header__full_width_light_navy">
    <div class="uk-container uk-container-center">
      {{ page.header }}
    </div>
  </div>

  <div class="header__full_width_navy">
    <div class="uk-container uk-container-center">
      {{ page.breadcrumb }}
    </div>
  </div>
</div>

{% if page.highlighted or page.help %}
  <div class="uk-container uk-container-center">
    <aside class="layout-container section clearfix" role="complementary">
      {{ page.highlighted }}
      {{ page.help }}
    </aside>
  </div>
{% endif %}

<div class="uk-container uk-container-center">
  {{ page.content }}
</div>

<div id="footer" class="footer__full_width_grey ">
  <div class="uk-container uk-container-center uk-padding-large uk-margin-large-top">
    {{ page.footer }}
  </div>
</div>
