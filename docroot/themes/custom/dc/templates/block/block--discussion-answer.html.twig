{#
/**
 * @file
 * Theme override of discussion answer block.
 *
 * @see template_preprocess_block()
 */
#}
{%
set classes = [
  'uk-margin-left',
  'uk-box-shadow-small',
  'uk-padding-small'
]
%}
<section{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {% if label %}
    <h2{{ title_attributes.addClass('dc-heading') }}>{{ label }}</h2>
  {% endif %}
  {{ title_suffix }}
  {% block content %}
    {{ content }}
  {% endblock %}
</section>
